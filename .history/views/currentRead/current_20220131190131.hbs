<div class="wrapper">
        <div class="background"></div>
        <div class="recentBooks">
            <div>
                <h2 class="reading">Now I'm reading...</h2>
            </div>
            <div class="recentBooks__books">
                {{#each readingBooks}}
                    <div class="recentBooks__books__book">
                        <p>{{this.title}}</p>
                        <p>{{this.author}}</p>
                        <p>{{this.year}}</p>
                        <p>cover: {{this.cover}}</p>
                    </div>
                {{/each}}
            </div>
        </div>
</div>