<h2>My books</h2>
<ul>
    {{#each books}}
    <form action="">
        <li>"{{this.title}}" / {{this.author}} / {{this.year}} / cover: {{this.cover}}
            <a href="/book/{{this.id}}">Edit</a>
            <form action="/book/{{this.id}}?_method=delete" method="POST"><input type="submit" value="delete"></form>
        </li>
    </form>
    {{/each}}
</ul>